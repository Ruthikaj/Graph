vector<int> bfsOfGraph(int V, vector<int> adj[]) {
        
        vector<int> ans;
        vector<int> vis(V,0);
        queue<int> q;
        
        q.push(0);
        vis[0]=1;
        
        while(!q.empty()){
            int x=q.front();
            ans.push_back(x);
            q.pop();
            for(auto i:adj[x]){
                if(!vis[i]){
                    vis[i]=1;
                    q.push(i);
                }
            }
        }
        return ans;
        
    }

